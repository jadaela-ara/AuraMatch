# Variables d'environnement pour Cloud Run Backend
# Ces variables doivent être configurées dans la console Cloud Run
# Onglet Security Management > Environment Variables

# Configuration Node.js
NODE_ENV=production
PORT=3001

# URLs de service (à mettre à jour après déploiement)
FRONTEND_URL=https://auramatch-frontend-XXXXXXXXX.run.app
GOOGLE_CALLBACK_URL=https://auramatch-backend-XXXXXXXXX.run.app/api/auth/google/callback
FACEBOOK_CALLBACK_URL=https://auramatch-backend-XXXXXXXXX.run.app/api/auth/facebook/callback

# Base de données MongoDB (à configurer avec votre vraie instance)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/auramatch?retryWrites=true&w=majority

# Sécurité JWT (générez une clé sécurisée)
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d

# OAuth Google (obtenez ces clés depuis Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id_from_google_console
GOOGLE_CLIENT_SECRET=your_google_client_secret_from_google_console

# OAuth Facebook (obtenez ces clés depuis Facebook Developers)
FACEBOOK_APP_ID=your_facebook_app_id_from_facebook_developers
FACEBOOK_APP_SECRET=your_facebook_app_secret_from_facebook_developers

# Gemini AI (pour les fonctionnalités IA)
GEMINI_API_KEY=your_gemini_api_key_here

# Cloudinary (pour l'upload d'images)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Rate limiting
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100